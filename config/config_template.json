{
  "_说明": "这是CalcAny程序的配置模板文件，您可以根据需要修改各项设置",
  "_使用方法": "1. 修改下面的配置项 2. 在程序中选择'工具'->'配置管理' 3. 点击'导入配置'选择此文件",
  
  "data_hierarchy_names": {
    "_说明": "数据层次结构的显示名称，可以自定义各层级的中文名称",
    "total": "总计",
    "boq": "清单项",
    "model": "模型构件",
    "part": "零部件"
  },
  
  "default_data_path": {
    "_说明": "程序启动时默认加载的数据文件路径，可以是相对路径或绝对路径",
    "_示例": "sample.json 或 C:/data/my_data.json",
    "_当前值": "sample.json"
  },
  
  "ui_theme": {
    "_说明": "用户界面主题设置，包括字体、颜色等",
    "font_family": "微软雅黑",
    "font_size": 9,
    "colors": {
      "_说明": "界面颜色配置，使用十六进制颜色代码",
      "primary": "#2196F3",
      "secondary": "#FFC107",
      "success": "#4CAF50",
      "warning": "#FF9800",
      "error": "#F44336"
    }
  },
  
  "factor_categories": {
    "_说明": "因子分类配置，定义各种计算因子的基本信息和表格信息",
    "基础因子": [
      {
        "name": "收入因子",
        "_说明_basic_info": "basic_info是字段名列表，程序会从JSON数据中提取这些字段的值进行显示",
        "basic_info": ["businessCode", "netSalesRevenue", "description", "unit", "category"],
        "_说明_table_info": "table_info定义在不同层级下显示的数据列",
        "table_info": {
          "total": ["netSalesRevenue", "listPriceTotalOutHardware"],
          "boq": ["netSalesRevenue", "listPriceTotalOutHardware"],
          "model": ["netSalesRevenue", "listPriceTotalOutHardware", "productName"],
          "part": ["netSalesRevenue", "listPriceTotalOutHardware"]
        }
      },
      {
        "name": "成本因子",
        "basic_info": ["businessCode", "totalCgp", "description", "unit", "category"],
        "table_info": {
          "total": ["totalCgp", "arCapitalTakesUpCostSoftware"],
          "boq": ["totalCgp"],
          "model": ["totalCgp"],
          "part": []
        }
      }
    ]
  },
  
  "display_names": {
    "_说明": "字段显示名称映射，将英文字段名映射为中文显示名称",
    "netSalesRevenue": "净销售收入",
    "listPriceTotalOutHardware": "硬件外总价",
    "totalCgp": "总成本毛利率",
    "arCapitalTakesUpCostSoftware": "软件资本成本",
    "productName": "产品名称",
    "calcLevel": "计算层级",
    "description": "描述",
    "unit": "单位",
    "category": "分类",
    "businessCode": "业务代码"
  },
  
  "document_info_fields": {
    "_说明": "文档信息显示字段，定义在文档信息区域显示哪些字段",
    "_示例": ["businessCode", "netSalesRevenue"],
    "_当前值": ["businessCode", "netSalesRevenue"]
  },
  
  "_配置示例": {
    "_说明": "以下是一些常用的配置示例",
    "高性能配置": {
      "max_memory_usage_mb": 2048,
      "chunk_size": 5000,
      "enable_memory_optimization": true
    },
    "低内存配置": {
      "max_memory_usage_mb": 256,
      "chunk_size": 500,
      "enable_memory_optimization": true
    },
    "调试配置": {
      "logging_level": "DEBUG",
      "enable_console_output": true
    }
  }
